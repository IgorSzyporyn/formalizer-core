{
  "name": "@formalizer/core",
  "version": "1.1.0",
  "description": "Core for the formalizer framework",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IgorSzyporyn/core.git"
  },
  "author": "Igor Szyporyn JÃ¸rgensen <igor.szyporyn@gmail.com> (https://twitter.com/IgorSzyporyn)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/IgorSzyporyn/core/issues"
  },
  "homepage": "https://github.com/IgorSzyporyn/core#readme",
  "engines": {
    "node": "^8 || ^10 || ^11"
  },
  "main": "dist/index.js",
  "module": "dist/core.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@types/ajv": "^1.0.0",
    "@types/jest": "^24.0.11",
    "@types/lodash": "^4.14.123",
    "@types/lodash-es": "^4.17.3",
    "babel-plugin-annotate-pure-calls": "^0.4.0",
    "babel-plugin-dev-expression": "^0.2.1",
    "babel-plugin-transform-rename-import": "^2.3.0",
    "cp-cli": "^2.0.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.15.1",
    "gh-pages": "^2.0.1",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "jest-cli": "^24.5.0",
    "jest-haste-map": "^24.5.0",
    "jest-resolve": "^24.5.0",
    "lint-staged": "^8.1.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "rollup": "^1.14.1",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.2.1",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-size-snapshot": "^0.8.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-terser": "^4.0.4",
    "size-limit": "^0.22.0",
    "ts-jest": "^24.0.0",
    "tsc-watch": "^2.1.2",
    "tslint": "^5.14.0",
    "tslint-config-prettier": "^1.18.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.3.3333"
  },
  "dependencies": {
    "ajv": "^6.10.0",
    "deepmerge": "^3.2.0",
    "lodash": "^4.17.11",
    "lodash-es": "^4.17.11"
  },
  "scripts": {
    "start": "rimraf dist && rimraf compiled && mkdir dist && cp-cli ./index.js ./dist/index.js && cross-env NODE_ENV=development tsc -p tsconfig.json && rollup -w -c | tsc -w -p tsconfig.json",
    "prebuild": "rimraf dist && rimraf compiled",
    "build": "cross-env NODE_ENV=production tsc -p tsconfig.json  && rollup -c && rimraf compiled && cp-cli ./index.js ./dist/index.js",
    "prepublish": "npm run build",
    "lint": "tslint --config ./tslint.json --project '.' --format stylish",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "npm run test -- --watch",
    "format": "prettier --config ./.prettierrc --write 'src/**/*' 'README.md'",
    "size": "size-limit",
    "docs": "typedoc --out ./docs --mode modules --tsconfig ./tsconfig.json ./src/",
    "gh-pages": "rimraf docs && npm run docs && gh-pages -d docs"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "*.{ts,js,json,md}": [
      "prettier --config ./.prettierrc --write",
      "git add"
    ],
    "src/**/*.ts": [
      "tslint --config ./tslint.json --format stylish",
      "jest --findRelatedTests"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "transform": {
      ".ts": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/**/?(*.)(spec|test).ts"
    ],
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js)$"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  },
  "size-limit": [
    {
      "path": "./dist/index.js",
      "limit": "14 kB"
    },
    {
      "path": "./dist/core.esm.js",
      "limit": "14 kB"
    },
    {
      "path": "./dist/core.umd.production.js",
      "limit": "14 kB"
    }
  ]
}
